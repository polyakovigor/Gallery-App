.page-header
  %h1 Categories
.row
  .col-sm-1.col-sm-offset-1
    = link_to new_category_path, data: {toggle: 'tooltip'}, title: 'Add category' do
      %span.glyphicon.glyphicon-folder-open
.row
  - @categories.each do |category|
    .col-xs-6.col-sm-6.col-md-3.text-center
      - if category.images.any?
        = link_to (image_tag category.images.first.picture.url(:thumbnail),
                   data: {toggle: 'tooltip'}, title: category.name,
                   class: 'img-rounded'), category
      - else
        = link_to (image_tag 'empty-folder.png', data: {toggle: 'tooltip'},
                   title: category.name, class: 'img-rounded'), category
= paginate @categories if @categories.present?
