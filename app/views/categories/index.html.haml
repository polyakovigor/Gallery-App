.page-header
  %h1 Categories
  %button.btn.btn-primary.btn-lg{ data: { target: '#myModal', toggle: 'modal' }, type: 'button' } Create new category
  #myModal.modal.fade{ role: 'dialog' }
    .modal-dialog.modal-sm
      .modal-content
        .modal-header
          %button.close{ data: { dismiss: 'modal' }, type: 'button' } Ã—
          %h3.modal-title New category
        .modal-body
          = render 'new_category_form'
.row
  - @categories.each do |category|
    .col-lg-2
      - if category.images.any?
        = link_to (image_tag(category.images.first.picture, size: '150')), category, data: { toggle: 'tooltip' }, title: category.name
      - else
        = link_to (image_tag('empty-folder.png', size: '150')), category, data: { toggle: 'tooltip' }, title: category.name