<% provide(:title, @category.name.upcase)%>
<h1>
  <%= @category.name.upcase %>
</h1>

<td><%= link_to 'Back', root_path %></td>

<%= form_for :image, method: :post, url: category_images_path(@category) do |f| %>
    <%= f.label  'Add more images' %>
    <%= f.file_field :picture %>
    <%= f.text_field :title %>
    <%= f.submit 'Upload' %>
<% end %>

<table>
  <thead>
  <tr>
    <th>Image id</th>
    <th>Image title</th>
    <th>Picture</th>
    <th>Action</th>
  </tr>
  </thead>

  <tbody>
  <% @category.images.each do |image| %>
      <tr>
        <td><%= image.id %></td>
        <td><%= image.title %></td>
        <td><%= image_tag image.picture.url(:thumb) %></td>
        <td><%= link_to 'Show', image %></td>
      </tr>
  <% end %>
  </tbody>
</table>