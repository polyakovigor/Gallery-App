.page-header
  %h1= @category.name.upcase
- if @images.present?
  = paginate @images
.row
  - @images.to_a.each do |image|
    .col-lg-2
      .delete-icon
        = link_to image, method: :delete, data: { toggle: 'tooltip', confirm: 'You sure?' }, title: 'Delete' do
          %span.glyphicon.glyphicon-trash
      = link_to (image_tag image.picture.url(:thumb), data: { toggle: 'tooltip', placement: 'bottom' }, title: image.title), image_path(image)

-#= render 'images/image_upload_form'