.page-header
  %h1= @category.name.upcase
.row
  .col-xs-6.col-sm-6.text-center
    = link_to new_category_image_path(category_id: @category.id), data: {toggle: 'tooltip'}, title: 'Add image' do
      %span.glyphicon.glyphicon-upload.logo-small
  .col-xs-6.col-sm-6.text-center
    - if current_user && current_user == @category.user
      = link_to @category, method: :delete, data: {toggle: 'tooltip', confirm: 'You sure?'}, title: 'Delete category' do
        %span.glyphicon.glyphicon-trash.logo-small
.row
  - @images.each do |image|
    .col-xs-6.col-sm-6.col-md-3.text-center
      = link_to (image_tag image.picture.url(:thumbnail), data: {toggle: 'tooltip', placement: 'bottom'},
                 title: image.title, class: 'img-rounded'), image
= paginate @images if present?