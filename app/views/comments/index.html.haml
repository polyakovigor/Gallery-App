.page-header
  %h1 Comments
.row
  .col-md-12
    %ul.list-unstyled
      - @comments.each do |comment|
        %li
          %h4.text-muted
            = comment.user.full_name
            %small
              at
              = local_datetime(comment.created_at)
          = comment.body
= paginate @comments if @comments.present?
