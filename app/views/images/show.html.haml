= javascript_include_tag 'tooltip.js'
.image-title
  %h1= @image.title
.row
  .col-sm-1
    .back-icon
      = link_to category_path(@image.category_id), 'data-toggle' => 'tooltip', :title => 'Back' do
        %span.glyphicon.glyphicon-chevron-left
  .col-sm-1
    .edit-icon
      = link_to edit_image_path, 'data-toggle' => 'tooltip', :title => 'Edit' do
        %span.glyphicon.glyphicon-edit
  .col-sm-1
    .delete_icon
      = link_to @image, method: :delete, 'data-toggle' => 'tooltip', :title => 'Delete', data: { confirm: 'You sure?' } do
        %span.glyphicon.glyphicon-trash
.full-image
  %center= image_tag @image.picture.url
%h3 Comments
- if @image.comments.present?
  - @image.comments.to_a.each do |comment|
    %h4= comment.body
    = link_to 'Delete', [comment.image, comment], method: :delete, data: { confirm: 'You sure?' }
%h2 Add a comment:
=form_for ( [@image, @image.comments.build]) do |f|
  =f.text_area :body, placeholder: 'Add a comment...', rows: 5, cols: 50
  %br
  .button
  =f.submit 'Send', class: 'btn-default btn-lg'
