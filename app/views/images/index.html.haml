.page-header
  %h1 Images
= paginate @images if @images.present?
.row
  - @images.each do |image|
    .col-lg-2
      #like_or_unlike
        - if user_signed_in? && current_user.likes?(image)
          = link_to '#' do
            %span.glyphicon.glyphicon-heart
        - else
          = link_to '#' do
            %span.glyphicon.glyphicon-heart-empty
        .likes_count
          = image.likes.size
      = link_to (image_tag image.picture, size: '150', data: { toggle: 'tooltip', placement: 'bottom' }, title: image.title), image