.row
  .col-md-6.col-md-offset-3
    = form_for [:category, @image], html: { class: 'form' } do |f|
      .form-group
        = f.text_field :title, placeholder: 'Enter image title', class: 'form-control'
      .form-group
        = f.file_field :picture, class: 'form-control'
      = f.submit 'Upload', class: 'btn btn-primary'